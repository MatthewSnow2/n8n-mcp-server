<%- include('partials/hero', { 
    title: 'Dashboard', 
    subtitle: 'Manage your n8n workflows and marketing campaigns'
}) %>

<div class="row">
    <div class="col-md-3">
        <div class="sidebar p-3">
            <h5>Navigation</h5>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="/dashboard">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/workflows">
                        <i class="bi bi-diagram-3"></i> Workflows
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/marketing">
                        <i class="bi bi-megaphone"></i> Marketing Campaigns
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/analytics">
                        <i class="bi bi-graph-up"></i> Analytics
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/settings">
                        <i class="bi bi-gear"></i> Settings
                    </a>
                </li>
            </ul>
            
            <h5 class="mt-4">Marketing AI Agents</h5>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/agents/strategy">
                        <i class="bi bi-bullseye"></i> Strategy Agent
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/agents/copywriting">
                        <i class="bi bi-pencil"></i> Copywriting Agent
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/agents/design">
                        <i class="bi bi-palette"></i> Design Agent
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/agents/campaign">
                        <i class="bi bi-calendar-event"></i> Campaign Manager
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/agents/performance">
                        <i class="bi bi-bar-chart"></i> Performance Analyst
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/agents/automation">
                        <i class="bi bi-lightning"></i> Automation Agent
                    </a>
                </li>
            </ul>
        </div>
    </div>
    
    <div class="col-md-9">
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <h5 class="card-title">Total Workflows</h5>
                        <h2 class="display-4"><%= workflows ? workflows.length : 0 %></h2>
                        <p class="card-text">Available n8n workflows</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <h5 class="card-title">Active Campaigns</h5>
                        <h2 class="display-4">3</h2>
                        <p class="card-text">Running marketing campaigns</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-info">
                    <div class="card-body">
                        <h5 class="card-title">API Requests</h5>
                        <h2 class="display-4">128</h2>
                        <p class="card-text">Last 24 hours</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Available Workflows</h5>
                <a href="/workflows" class="btn btn-sm btn-primary">View All</a>
            </div>
            <div class="card-body">
                <% if (workflows && workflows.length > 0) { %>
                    <div class="row">
                        <% workflows.slice(0, 6).forEach(function(workflow) { %>
                            <div class="col-md-6 col-lg-4 mb-3">
                                <div class="card workflow-card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= workflow.name %></h5>
                                        <p class="card-text small">
                                            <% if (workflow.active) { %>
                                                <span class="badge bg-success">Active</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Inactive</span>
                                            <% } %>
                                            ID: <%= workflow.id %>
                                        </p>
                                        <a href="/workflows/<%= workflow.id %>" class="btn btn-sm btn-outline-primary">View Details</a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else if (typeof error !== 'undefined') { %>
                    <div class="alert alert-danger">
                        <%= error %>
                    </div>
                <% } else { %>
                    <div class="alert alert-info">
                        No workflows found. Please create workflows in your n8n instance.
                    </div>
                <% } %>
            </div>
        </div>
        
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Marketing AI Crew Integration</h5>
                <a href="/marketing/new" class="btn btn-sm btn-primary">New Campaign</a>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Summer Promotion</h5>
                                <p class="card-text">
                                    <span class="badge bg-success">Active</span>
                                    <span class="text-muted">Created: April 10, 2025</span>
                                </p>
                                <div class="progress mb-2" style="height: 5px;">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <p class="small">Budget: $5,000 (75% utilized)</p>
                                <a href="/marketing/campaigns/1" class="btn btn-sm btn-outline-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Product Launch</h5>
                                <p class="card-text">
                                    <span class="badge bg-warning">Planning</span>
                                    <span class="text-muted">Created: April 5, 2025</span>
                                </p>
                                <div class="progress mb-2" style="height: 5px;">
                                    <div class="progress-bar bg-warning" role="progressbar" style="width: 30%;" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <p class="small">Budget: $10,000 (30% allocated)</p>
                                <a href="/marketing/campaigns/2" class="btn btn-sm btn-outline-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="alert alert-info mt-3">
                    <h5>Marketing AI Crew Integration</h5>
                    <p>Your Marketing AI Crew is integrated with this MCP server. You can create and manage marketing campaigns that leverage all 6 specialized AI agents:</p>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li><i class="bi bi-check-circle-fill text-success"></i> Strategy Agent</li>
                                <li><i class="bi bi-check-circle-fill text-success"></i> Copywriting Agent</li>
                                <li><i class="bi bi-check-circle-fill text-success"></i> Design Agent</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li><i class="bi bi-check-circle-fill text-success"></i> Campaign Manager</li>
                                <li><i class="bi bi-check-circle-fill text-success"></i> Performance Analyst</li>
                                <li><i class="bi bi-check-circle-fill text-success"></i> Automation & Scaling Agent</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
